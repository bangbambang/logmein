{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ user.dob ? user.dob|date('Y-m-d') : '-' }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ user.gender is empty ? '-' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('user_list') }}">back</a>
{% endblock %}
